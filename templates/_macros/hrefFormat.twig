{% macro short(url) %}

    {% set url = url|replace({'www.': ''}) %}

    {% if url|slice(0,5) == 'https' %}
        {{ url|slice(8,(url|length-5)) }}
    {% elseif url| slice(0,4) == 'http' %}
        {{ url|slice(7,(url|length-4)) }}
    {% else %}
        {{ url }}
    {% endif %}

{% endmacro %}

{% macro print(url) %}

    {% if url|slice(0,5) == 'https' %}
        {{ url|slice(8,(url|length-5)) }}
    {% elseif url| slice(0,4) == 'http' %}
        {{ url|slice(7,(url|length-4)) }}
    {% else %}
        {{ url }}
    {% endif %}

{% endmacro %}

{% macro link(url) %}

    {{ url|slice(0,4) == 'http' ? url : 'http://' ~ url }}

{% endmacro %}

