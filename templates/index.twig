{# Redirect root url to default locale #}

{% if craft.app.request.segments is empty and entry is not defined %}
    {% redirect craft.app.config.general.custom.defaultLocale 301 %}
{% endif %}

{# Route sitestructure templates #}

{% set templatePath = entry.type|split('_') %}
{% set bodyClass = templatePath|last %}

{% include [templatePath|join('/'), '404.twig'] %}
